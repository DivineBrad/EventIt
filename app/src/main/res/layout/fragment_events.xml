<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bradj.eventit.EventsFragment">



    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/event_spinner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"

        android:orientation="horizontal"
        >

        <Spinner
            android:id="@+id/sp_event_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Spinner
            android:id="@+id/sp_event_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />


    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/eventsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/event_spinner_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="3"
        android:layout_marginTop="40dp"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvEvents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@id/eventsContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            />



    </android.support.constraint.ConstraintLayout>




</FrameLayout>
